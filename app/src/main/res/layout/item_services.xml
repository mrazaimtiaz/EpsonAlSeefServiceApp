<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mCardView"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:id="@+id/mIconService"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/mServiceBtn"
            app:layout_constraintEnd_toEndOf="@id/mServiceBtn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp" />

        <Button
            android:id="@+id/mServiceBtn"
            android:layout_marginTop="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mIconService"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_85sdp" />

        <TextView
            android:id="@+id/waitingCustomer"
            app:layout_constraintStart_toStartOf="@id/mServiceBtn"
            android:text="Waiting Customer:"
            android:textSize="@dimen/_9sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mServiceBtn" />
        <!-- app:layout_constraintStart_toEndOf="@id/waitingCustomer"
           app:layout_constraintEnd_toStartOf="@+id/waitingCustomerAr"-->
        <TextView
            android:id="@+id/waitingCustomerCount"
                app:layout_constraintStart_toStartOf="@+id/mServiceBtn"
            app:layout_constraintEnd_toEndOf="@+id/mServiceBtn"


            android:text=""
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mServiceBtn" />

        <TextView
            android:id="@+id/waitingCustomerAr"
            app:layout_constraintEnd_toEndOf="@id/mServiceBtn"
            android:text="العميل المنتظر:"
            android:textSize="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mServiceBtn" />




</androidx.constraintlayout.widget.ConstraintLayout>