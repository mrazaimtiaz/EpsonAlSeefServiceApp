<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epson.epos2_printer.ui.ManualActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/mAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bgmain"
            android:paddingStart="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/ic_close"
            app:title="@string/setting_activity"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>


    <EditText
        android:id="@+id/mBTAddress"
        app:layout_constraintTop_toBottomOf="@id/mAppBarLayout"
        android:layout_marginTop="@dimen/_40sdp"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Write BT Address of Printer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_18sdp"/>

    <Button
        android:id="@+id/mBtnBt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:text="Add Address"
        app:layout_constraintTop_toBottomOf="@id/mBTAddress"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_18sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>